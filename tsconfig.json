{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es7", "es2017.object"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "paths": {
      "@times-components-native/*": ["packages/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
        "node_modules",
        "metro.config.js",
        "index.ios.js",
        "android.ios.js",
        "build",
        "dist",
        "**/*.js",
        "**/*.jsx",
        "**/*.json", // Don't try and check JSON files
        "**/*.svg"
    ]
}

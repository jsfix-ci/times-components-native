{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["es7", "es2017.object"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "paths": {
      "react": ["./node_modules/@types/react"],
      "react-native": ["./node_modules/@types/react-native"],
      "@times-components-native/*": ["packages/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "index.ios.js",
    "index.android.js",
    "build",
    "dist",
    "**/*.js",
    "**/*.jsx",
    "**/*.json", // Don't try and check JSON files
    "**/*.svg"
  ]
}
